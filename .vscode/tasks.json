            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "hide": false,
            "command": "reportgenerator",
            "type": "process",
            "args": [
                "-reports:\"${workspaceFolder}\\Projeto3nPlus1.Tests\\coverage.opencover.netcoreapp3.1.xml\"",
                "-targetdir:\"${workspaceFolder}\\Projeto3nPlus1.Tests\\coveragereport\"",
                "-reporttypes:Html",
                "-historydir:\"${workspaceFolder}\\Projeto3nPlus1.Tests\\coveragehistory\"",
                "-Title:\"Projeto3nPlus1 - Test report - .NET Core 3.1\"",
