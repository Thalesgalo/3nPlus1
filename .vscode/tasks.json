            "hide": false,
            "command": "start",
            "type": "shell",
            "windows": {
                "command": "start"
            },
            "args": [
                "msedge",
                "${workspaceFolder}\\Projeto3nPlus1.Tests\\coveragereport\\index.html"
            ],
            "problemMatcher": []
        },
    ],
    "inputs": []
