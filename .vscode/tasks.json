{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "[Projeto3nPlus1] Build, Test, Generate and Open Report",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "hide": false,
            "command": "echo Finished task \"[Projeto3nPlus1] Build, Test, Generate and Open Report\"",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
